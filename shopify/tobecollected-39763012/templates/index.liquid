<section class="product-list">
  <header class="product-list__header">
    <div class="inner">
      <h3>full collection</h3>
      <div class="pagination-links">
        <a href="#" class="prev">&lt;</a>
        <ol>
          <li class="active"><a href="#">1</a></li>
          <li><a href="#">2</a></li>
          <li><a href="#">3</a></li>
        </ol>
        <a href="#" class="next">&gt;</a>
      </div>
    </div>
  </header>
  <div class="inner">
    {% for product in collections[settings.frontpage_collection].products %}
    <article>
      <a href="{{ product.url }}">
        <figure>
          <img src="{{ product.featured_image | product_img_url: 'grande' }}" alt="{{ product.title }}">
        </figure>
        <h6>
          <span>{{ product.title }}</span>
          <span class="spacer">|</span>
          <span>
            {% assign price = product.price | money %}
            {% if product.available %}
              {% if product.compare_at_price_max > product.price %}
                <del>{{ product.compare_at_price | money }}</del>
              {% endif %}
              {% if product.price_varies %}
                {{ 'collections.product_item.from_text_html' | t: price: price }}
              {% else %}
                {{ price }}
              {% endif %}
            {% else %}
              {% if product.price_varies %}
                {{ 'collections.product_item.from_text_html' | t: price: price }}
              {% else %}
                {{ price }}
              {% endif %}
              {{ 'products.product.sold_out_html' | t }}
            {% endif %}
          </span>
        </h6>
      </a>
    </article>
    {% endfor %}
  </div>
  <footer class="product-list__footer">
    <div class="pagination-links">
      <a href="#" class="prev">&lt;</a>
      <ol>
        <li class="active"><a href="#">1</a></li>
        <li><a href="#">2</a></li>
        <li><a href="#">3</a></li>
      </ol>
      <a href="#" class="next">&gt;</a>
    </div>
  </footer>
</section>